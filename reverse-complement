#!/bin/bash
tail +3 "$0" | R --slave --args $@; exit $?
# ------------------------------------------------------------------
# The Computer Language Shootout
# http://shootout.alioth.debian.org/
#
# Contributed by Leo Osvald
# ------------------------------------------------------------------

codes <- c(
    "A", "C", "G", "T", "U", "M", "R", "W", "S", "Y", "K", "V", "H", "D", "B",
    "N")
complements <- c(
    "T", "G", "C", "A", "A", "K", "Y", "W", "S", "R", "M", "B", "D", "H", "V",
    "N")
comp_map <- NULL
comp_map[codes] <- complements
complement <- function(c) {
    return(comp_map[[c]])
}

f <- file("/tmp/in", "r")
while (length(s <- scan(f, what="", nmax=1, quiet=TRUE))) {
    # cat("Read item: ", s, "\n", sep="")
    codes <- substring(s, seq(1, nchar(s)), seq(1, nchar(s)))
    cat(paste(sapply(codes, complement), collapse=""))
}
close(f)
cat("\n")
