#!/bin/bash
tail -n +3 "$0" | R --slave --args $@; exit $?
# ------------------------------------------------------------------
# The Computer Language Shootout
# http://shootout.alioth.debian.org/
#
# Contributed by Leo Osvald
# ------------------------------------------------------------------

eval_A <- function(i, j) 1 / ((i + j - 2) * (i + j - 1) / 2 + i)
eval_A_times_u <- function(u, Au) {
    # g_eval_At_mat <- t(outer(seq(n), seq(n), FUN=eval_A))
    return(u %*% g_eval_At_mat)
}
eval_At_times_u <- function(u, Au) {
    # g_eval_A_mat <- outer(seq(n), seq(n), FUN=eval_A)
    return(u %*% g_eval_A_mat)
}
eval_AtA_times_u <- function(u, AtAu)
    eval_At_times_u(
	eval_A_times_u(u, rep(0, length(u))),
	AtAu)

n <- as.double(commandArgs(trailingOnly=TRUE))
g_eval_A_mat <- outer(seq(n), seq(n), FUN=eval_A)
g_eval_At_mat <- t(g_eval_A_mat)
u <- rep(1, n)
v <- rep(0, n)
for (itr in seq(10)) {
    v <- eval_AtA_times_u(u, v)
    u <- eval_AtA_times_u(v, rep(0, n))
}

options(digits=10)
cat(sqrt(sum(u * v) / sum(v * v)), "\n")
